FROM mediawiki:1.43.1
ARG MEDIAWIKI_DB_HOST
ARG MEDIAWIKI_DB_PORT
ARG MEDIAWIKI_DB_NAME
ARG MEDIAWIKI_DB_USER
ARG MEDIAWIKI_DB_PASSWORD
ARG MYSQL_ROOT_PASSWORD
ARG MYSQL_DATABASE
ARG MYSQL_USER
ARG MYSQL_PASSWORD

ENV MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD}
ENV MYSQL_DATABASE=${MYSQL_DATABASE}
ENV MYSQL_USER=${MYSQL_USER}
ENV MYSQL_PASSWORD=${MYSQL_PASSWORD}
ENV MEDIAWIKI_DB_HOST
ENV MEDIAWIKI_DB_PORT
ENV MEDIAWIKI_DB_NAME
ENV MEDIAWIKI_DB_USER
ENV MEDIAWIKI_DB_PASSWORD


COPY ./volumes/mediawiki/* var/www/html/
EXPOSE 80
